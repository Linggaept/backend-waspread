# WhatsApp Session Optimization
MAX_WA_SESSIONS=40
WA_IDLE_TIMEOUT_MINUTES=15

# WhatsApp History Sync (set to 'true' to sync ALL history - WARNING: high memory usage!)
WA_SYNC_FULL_HISTORY=false
