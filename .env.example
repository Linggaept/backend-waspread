# ===========================================
# WhatsApp Blasting SaaS - Environment Config
# ===========================================
# Copy this file to .env and fill in the values
#
# PRODUCTION REQUIREMENTS:
# - All DB_* variables must be set
# - JWT_SECRET must be set (use a strong random string)
# - NODE_ENV must be set to 'production'
# - DB_SSL should be 'true' for secure database connections
# ===========================================

# App Configuration
NODE_ENV=development
APP_PORT=3000
LOG_LEVEL=debug

# Database (REQUIRED in production)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=
DB_PASSWORD=
DB_DATABASE=waspread
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication (REQUIRED in production)
JWT_SECRET=
JWT_EXPIRES_IN=604800

# Midtrans Payment Gateway
# Sandbox credentials for development
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false

# Cloudflare R2 Storage (Optional - falls back to local if not set)
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=

# WhatsApp Session Configuration
MAX_WA_SESSIONS=40
WA_IDLE_TIMEOUT_MINUTES=15

# WhatsApp History Sync
# Set WA_SYNC_FULL_HISTORY=true to sync ALL history (WARNING: high memory usage!)
WA_SYNC_FULL_HISTORY=false
WA_SYNC_HISTORY_DAYS=7

# Chat Message Retention
# Auto-delete old messages after N days (set to 0 to disable)
CHAT_MESSAGE_RETENTION_DAYS=30
CHAT_CLEANUP_INTERVAL_HOURS=24

# Mail Config (SMTP)
MAIL_HOST=
MAIL_PORT=587
MAIL_USER=
MAIL_PASS=
MAIL_FROM=

# Gemini AI (Optional - AI features disabled if not set)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Backup Configuration
DAILY_RETENTION=7
WEEKLY_RETENTION=4
MONTHLY_RETENTION=3
BACKUP_ALERT_EMAIL=
BACKUP_ALERT_WEBHOOK=
