# Chat Message Retention (auto-delete old messages, set to 0 to disable)
CHAT_MESSAGE_RETENTION_DAYS=30
CHAT_CLEANUP_INTERVAL_HOURS=24

# Mail Config (SMTP)
MAIL_HOST=
MAIL_PORT=
MAIL_USER=
MAIL_PASS=
